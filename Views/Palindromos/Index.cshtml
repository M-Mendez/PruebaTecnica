@model PruebaT.Models.ViewModel.Palindromo
<section class="content-header">
    
</section>
<!-- Main content -->
<section class="content container-fluid">

<div class="box">
    <div class="box-body">    
        <form asp-action="Index" method="post">
            <div class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <br>  
                    <div class="form-group">
                        <div class="col-md-1"></div>
                        <div class="col-md-5">
                            <label asp-for="cadena">Ingresa tu cadena</label>
                            <input type= "text"asp-for="cadena" class="form-control" />
                            <span asp-validation-for="cadena" class="text-danger"></span>
                        </div>

                    <div class="form-group">
                        <div class="col-md-1"></div>
                        <div class="col-md-9">
                            <input type="submit" value="Buscar" class="btn btn-default" />
                        </div>
                    </div>
            </div>
        </form>
    </div>

</div>
<div class="container">
    <p>Palabras Encontras : @ViewBag.Cantidad</p>
    <ul>
        @foreach(var palabra  in ((List<string>)ViewBag.Lista))
        {
            <li>@palabra</li>   
        }
    </ul>

    
</div>

</section>
