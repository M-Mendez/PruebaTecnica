@model PruebaT.Models.ViewModel.cambiarPassVmodel

<div class="row">
    
    <div class="col-md-6 offset-3">
        <div class="form-style">
             <form asp-action="Restaurar" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="token" />
                    <br>
                    <div class="form-group">
                        <div class="col-md-5">
                            <label asp-for="password">Escribe tu nueva contraseña</label>
                            <input asp-for="password" class="form-control" />
                            <span asp-validation-for="password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-5">
                            <label asp-for="password2">Repite la contraseña</label>
                            <input asp-for="password2" class="form-control" />
                            <span asp-validation-for="password2" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-1"></div>
                        <div class="col-md-9">
                            <input type="submit" value="Confirmar" class="btn btn-success" />
                        </div>
                    </div>
            </form>
            <span class="text-success">@ViewBag.success</span>
            <h1>
                <span class="text-danger">@ViewBag.Error</span>
            </h1>
        </div>        
    </div>
</div>